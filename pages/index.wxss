.body{
    background-color: transparent;   /*按钮透明*/  
	  border:none;				/*设置按钮边框*/
    display: flex;
    align-items: center;
    vertical-align: center;
    justify-content: center;
    flex-direction:row;
    padding-left: 30rpx;
    padding-right: 30rpx;
    overflow: hidden;
    width: 144rpx;
    height: 144rpx;
    border-radius: 0%;
}
.bigTitle{
    font-size: 52rpx;
    padding-left:  30rpx;
    padding-right: 30rpx;
    position: center;
    text-align: center;
}
.title{
    font-size: 52rpx;
}
.desc{
  
    margin-top: 10rpx;
    color: #888888;
    font-size: 28rpx;
    padding-left:  30rpx;
    padding-right: 30rpx;
    text-align: center;
}



.widgets__item{
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    border-radius: 4rpx;
    cursor: pointer;
    padding-left: 10;
    size: 15ch;
}
.widgets__info{
    display: flex;
    padding: 40rpx;
    align-items: center;
    flex-direction: row;
}
.widgets__info_show{
}
.widgets__info_show .widgets__info-img{
    transform: rotate(-90deg);
}
.widgets__info-name{
    flex: 1;
}
.widgets__info-img{
    width: 32rpx;
    height: 32rpx;
    transition: transform .4s;
    transform: rotate(90deg);
}

.widgets__list{
    display: none;
}
.widgets__list_show{
    display: block;
}
.widget{
    background-color: transparent;   /*按钮透明*/  
	  border:none;				/*设置按钮边框*/
    display: flex;
    align-items: center;
    justify-content: center;
    position:relative;
    padding-top: 26rpx;
    padding-bottom: 26rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}
navigator {
  position:relative;
  
}
.widget__arrow{
    position: absolute;
    top: 28rpx;
    right: 44rpx;
    width: 32rpx;
    height: 32rpx;
}

.in-image {
  margin: 20rpx 10rpx 25rpx 10rpx
}

.widget__line{
    content: " ";
    position: absolute;
    left: 40rpx;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #F0F0F0;
}
.widget__line_first{
    left: 0;
    right: 0;
    background-color: #D8D8D8;
}

text{
  font-size: 80rpx;     /*改变文本的字体大小*/
  color: #3C5F81;     /*改变字体的颜色*/
}

image{
  width: 220rpx;
}

.detail{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.bar{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}

.box{
  width: 33.3%;
  text-align: center;
}

